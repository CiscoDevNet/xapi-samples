<Extensions>
  <Version>1.5</Version>
  <Panel>
    <PanelId>ONAIR</PanelId>
    <Type>Statusbar</Type>
    <Icon>Lightbulb</Icon>
    <Order>2</Order>
    <Color>#FF503C</Color>
    <Name>OnAir</Name>
    <Page>
      <Name>Console</Name>
      <Row>
        <Name>'OnAir' Status</Name>
        <Widget>
          <WidgetId>onair_console_statusIcon</WidgetId>
          <Type>Button</Type>
          <Options>size=1;icon=blue</Options>
        </Widget>
        <Widget>
          <WidgetId>onair_console_statusText</WidgetId>
          <Name>then, where's dad ?</Name>
          <Type>Text</Type>
          <Options>size=3;fontSize=normal;align=center</Options>
        </Widget>
      </Row>
      <Row>
        <Name>Mode</Name>
        <Widget>
          <WidgetId>onair_console_modeToggle</WidgetId>
          <Type>ToggleButton</Type>
          <Options>size=1</Options>
        </Widget>
        <Widget>
          <WidgetId>onair_console_modeText</WidgetId>
          <Name>Automatic</Name>
          <Type>Text</Type>
          <Options>size=3;fontSize=normal;align=left</Options>
        </Widget>
      </Row>
      <Row>
        <Name>Manual</Name>
        <Widget>
          <WidgetId>onair_console_manualGroup</WidgetId>
          <Type>GroupButton</Type>
          <Options>size=4</Options>
          <ValueSpace>
            <Value>
              <Key>free</Key>
              <Name>Off</Name>
            </Value>
            <Value>
              <Key>occupied</Key>
              <Name>Free</Name>
            </Value>
            <Value>
              <Key>busy</Key>
              <Name>Busy</Name>
            </Value>
            <Value>
              <Key>onair</Key>
              <Name>OnAir</Name>
            </Value>
          </ValueSpace>
        </Widget>
      </Row>
      <PageId>onair_consolePanel</PageId>
      <Options/>
    </Page>
    <Page>
      <Name>Settings</Name>
      <Row>
        <Name>Switch</Name>
        <Widget>
          <WidgetId>widget_36</WidgetId>
          <Type>ToggleButton</Type>
          <Options>size=1</Options>
        </Widget>
        <Widget>
          <WidgetId>widget_37</WidgetId>
          <Name>on/off</Name>
          <Type>Text</Type>
          <Options>size=3;fontSize=normal;align=left</Options>
        </Widget>
      </Row>
      <Row>
        <Name>Automatic Mode</Name>
        <Widget>
          <WidgetId>widget_38</WidgetId>
          <Type>Spacer</Type>
          <Options>size=4</Options>
        </Widget>
      </Row>
      <Row>
        <Name>Standby delay</Name>
        <Widget>
          <WidgetId>widget_24</WidgetId>
          <Name>1 minute</Name>
          <Type>Text</Type>
          <Options>size=4;fontSize=normal;align=left</Options>
        </Widget>
      </Row>
      <Row>
        <Name>Wakeup on Motion</Name>
        <Widget>
          <WidgetId>widget_25</WidgetId>
          <Name>yes</Name>
          <Type>Text</Type>
          <Options>size=4;fontSize=normal;align=left</Options>
        </Widget>
      </Row>
      <Row>
        <Name>DoNotDisturb Timeout</Name>
        <Widget>
          <WidgetId>widget_26</WidgetId>
          <Name>120 minutes</Name>
          <Type>Text</Type>
          <Options>size=4;fontSize=normal;align=left</Options>
        </Widget>
      </Row>
      <PageId>onair_settingsPanel</PageId>
      <Options/>
    </Page>
  </Panel>
</Extensions>
