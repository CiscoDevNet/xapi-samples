<Extensions>
  <Version>1.5</Version>
  <Panel>
    <PanelId>Hue</PanelId>
    <Type>Statusbar</Type>
    <Icon>Sliders</Icon>
    <Order>2</Order>
    <Color>#A866FF</Color>
    <Name>Philips Hue</Name>
    <Page>
      <Name>Basic</Name>
      <Row>
        <Name>Switch</Name>
        <Widget>
          <WidgetId>toggle</WidgetId>
          <Type>ToggleButton</Type>
          <Options>size=1</Options>
        </Widget>
        <Widget>
          <WidgetId>widget_22</WidgetId>
          <Name/>
          <Type>Text</Type>
          <Options>size=3;fontSize=normal;align=center</Options>
        </Widget>
      </Row>
      <Row>
        <Name>Pick a color</Name>
        <Widget>
          <WidgetId>color_group</WidgetId>
          <Type>GroupButton</Type>
          <Options>size=4</Options>
          <ValueSpace>
            <Value>
              <Key>color_red</Key>
              <Name>Red</Name>
            </Value>
            <Value>
              <Key>color_green</Key>
              <Name>Green</Name>
            </Value>
            <Value>
              <Key>color_blue</Key>
              <Name>Blue</Name>
            </Value>
          </ValueSpace>
        </Widget>
      </Row>
      <Options/>
    </Page>
    <Page>
      <Name>Advanced</Name>
      <Row>
        <Name>Saturation</Name>
        <Widget>
          <WidgetId>widget_19</WidgetId>
          <Type>Slider</Type>
          <Options>size=4</Options>
        </Widget>
      </Row>
      <Row>
        <Name>Brightness</Name>
        <Widget>
          <WidgetId>widget_20</WidgetId>
          <Type>Slider</Type>
          <Options>size=4</Options>
        </Widget>
      </Row>
      <Options/>
    </Page>
  </Panel>
</Extensions>
